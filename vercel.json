{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "vercel-php@0.7.4"
    }
  ],
  "routes": [
    {
      "src": "/(css|img|js)/(.*)",
      "dest": "/public/$1/$2"
    },
    {
      "src": "/(.*\\.(ico|png|jpg|jpeg|gif|svg|css|js))$",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ]
}