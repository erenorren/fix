{
  "version": 2,
  "builds": [
    { "src": "public/index.php", "use": "vercel-php@0.7.4" },
    { "src": "public/css/*", "use": "@vercel/static" },
    { "src": "public/js/*", "use": "@vercel/static" },
    { "src": "public/img/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/css/(.*)", "dest": "public/css/$1" },
    { "src": "/js/(.*)", "dest": "public/js/$1" },
    { "src": "/img/(.*)", "dest": "public/img/$1" },

    { "src": "/(.*)", "dest": "public/index.php" }
  ]
}
